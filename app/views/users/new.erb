<h1> Create an account </h1>

<form action="/users" method="POST">
  <input type="text" name="user[first_name]" value="<%= @user.try(:first_name) %>" placeholder="First Name"><br><br>
  <input type="text" name="user[last_name]" value="<%= @user.try(:last_name) %>" placeholder="Last Name"><br><br>
  <input type="text" name="user[username]" value="<%= @user.try(:username) %>" placeholder="Username"><br><br>
  <input type="password" name="user[password]" placeholder="Password" required><br><br>
  <input type="submit" value="Register">
</form>