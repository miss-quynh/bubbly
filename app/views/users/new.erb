<div class="form">
    <form action="/users" method="POST">
      <div class="container">
        <label><b>First Name</b></label>
        <input type="text" name="user[first_name]" value="<%= @user.try(:first_name) %>" placeholder="Enter First Name" required><br><br>

        <label><b>Last Name</b></label>
        <input type="text" name="user[last_name]" value="<%= @user.try(:last_name) %>" placeholder="Enter Last Name" required><br><br>

        <label><b>Username</b></label>
        <input type="text" name="user[username]" value="<%= @user.try(:username) %>" placeholder="Enter Username" required><br><br>

        <label><b>Password</b></label>
        <input type="password" name="user[password]" placeholder="Enter Password" required><br><br>

        <input type="submit" value="Sign Up">
      </div>
    </form>
</div>